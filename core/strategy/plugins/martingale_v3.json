{
    "name": "martingale_v3",
    "display_name": "Martingale V3 Strategy",
    "description": "Advanced martingale strategy with risk management",
    "strategy_class": "core.strategy.martingale_v3.strategy:MartingaleV3Strategy",
    "version": "3.0.0",
    "category": "grid_trading",
    "risk_level": "high",
    "supported_platforms": ["binance", "coinw", "okx"],
    "supported_instruments": ["SPOT", "FUTURES"],
    "default_params": {
        "symbol": "ETHUSDT",
        "base_order_size": 10.0,
        "grid_gap": 0.005,
        "max_grid_levels": 10,
        "take_profit_ratio": 0.01,
        "stop_loss_ratio": 0.1,
        "max_position_size": 1000.0,
        "hedge_enabled": false,
        "auto_restart": true,
        "cool_down_period": 3600
    },
    "param_schema": {
        "type": "object",
        "required": ["symbol", "base_order_size"],
        "properties": {
            "symbol": {
                "type": "string",
                "description": "Trading symbol (e.g. ETHUSDT)",
                "pattern": "^[A-Z0-9]+$"
            },
            "base_order_size": {
                "type": "number",
                "minimum": 1.0,
                "description": "Base order size for first position"
            },
            "grid_gap": {
                "type": "number",
                "minimum": 0.001,
                "maximum": 0.1,
                "default": 0.005,
                "description": "Grid gap as ratio (0.005 = 0.5%)"
            },
            "max_grid_levels": {
                "type": "integer",
                "minimum": 1,
                "maximum": 20,
                "default": 10,
                "description": "Maximum grid levels"
            },
            "take_profit_ratio": {
                "type": "number",
                "minimum": 0.001,
                "maximum": 0.1,
                "default": 0.01,
                "description": "Take profit ratio (0.01 = 1%)"
            },
            "stop_loss_ratio": {
                "type": "number",
                "minimum": 0.01,
                "maximum": 0.5,
                "default": 0.1,
                "description": "Stop loss ratio (0.1 = 10%)"
            },
            "max_position_size": {
                "type": "number",
                "minimum": 10.0,
                "description": "Maximum total position size"
            },
            "hedge_enabled": {
                "type": "boolean",
                "default": false,
                "description": "Enable hedging mode"
            },
            "auto_restart": {
                "type": "boolean",
                "default": true,
                "description": "Auto restart after take profit/stop loss"
            },
            "cool_down_period": {
                "type": "integer",
                "minimum": 60,
                "maximum": 86400,
                "default": 3600,
                "description": "Cool down period in seconds"
            }
        }
    },
    "risk_warnings": [
        "Martingale strategy can lead to significant losses during strong trends",
        "Ensure adequate capital for maximum grid levels",
        "Monitor market conditions and volatility carefully"
    ],
    "performance_metrics": {
        "expected_drawdown": "15-30%",
        "suitable_market": "sideways/ranging",
        "capital_requirement": "high"
    },
    "metadata": {
        "author": "Stock-Trading Team",
        "created_at": "2025-09-27",
        "updated_at": "2025-09-27",
        "tags": ["martingale", "grid", "quantitative"],
        "documentation": "strategies/martingale_v3/README.md"
    }
}